# Proxmox
PROXMOX_HOST=192.168.1.100
PROXMOX_USER=root@pam
PROXMOX_PASSWORD=changeme
PROXMOX_VERIFY_SSL=false
PROXMOX_MOCK=true

# NetBox
NETBOX_URL=http://localhost:8000
NETBOX_TOKEN=your_netbox_token_here

# Database (SQLite default; swap to postgresql+asyncpg://... for Postgres)
DATABASE_URL=sqlite+aiosqlite:///./direttore.db

# API
# When deploying behind nginx or any reverse proxy, add your real public
# hostname here — browsers enforce CORS and FastAPI will block requests from
# unlisted origins.
# Example: API_CORS_ORIGINS=http://localhost:5173,https://direttore.example.com
API_CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ── Auth / JWT ─────────────────────────────────────────────────────────────
# Generate a random secret:  python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=CHANGE_ME_in_production_use_a_random_hex_string
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# First-boot admin account — automatically created when no users exist.
# Change this password immediately after first login!
INITIAL_ADMIN_USER=admin
INITIAL_ADMIN_PASSWORD=changeme
